extends layout

//- include mixins
include mixins/_storeForm
include mixins/_pagination
include mixins/_storeCard

block content
  .inner
    h2= title
    .stores
      if showAdd
        .store.store--wide
          .store-details
            h2 Add a new store!
            +storeForm(store, 'POST')
      each store in stores
        +storeCard(store)

    //- if we are sending data for pagination
    if page
      +pagination(page, pages, count)
