mixin registerForm(body = {}, method = 'POST')
  form.form(action="/register" method=method)
    h2 Register
    label(for="name") Name
    input(type="text" name="name" value=body.name)
    label(for="name") Email
    input(type="email" name="email" value=body.email)
    label(for="name") Password
    input(type="password" name="password")
    label(for="name") Confirm Password
    input(type="password" name="password-confirm")
    input.button(type="submit" value="Register â†’ ")
